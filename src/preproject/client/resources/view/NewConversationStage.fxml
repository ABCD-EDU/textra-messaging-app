<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<Stage fx:id="newConvoStage" title="Create New Conversation" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="preproject.client.controllers.NewConversationStageController">
    <scene>
        <Scene>
            <AnchorPane prefHeight="520.0" prefWidth="400.0">
            <children>
               <TextField fx:id="groupAlias_field" layoutX="29.0" layoutY="50.0" prefHeight="25.0" prefWidth="343.0" />
               <Label layoutX="29.0" layoutY="26.0" text="Group Alias" />
               <Label layoutX="29.0" layoutY="82.0" text="Member(s)" />
               <ScrollPane fx:id="members_sPane" layoutX="21.0" layoutY="122.0">
                  <content>
                     <VBox fx:id="members_vBox" alignment="TOP_CENTER" prefHeight="335.0" prefWidth="359.0" spacing="3.0">
                        <children>
                           <TextField />
                        </children>
                     </VBox>
                  </content>
               </ScrollPane>
               <Button fx:id="add_button" layoutX="21.0" layoutY="473.0" mnemonicParsing="false" onAction="#onAdd" text="Add New Member" />
               <Button fx:id="save_button" layoutX="272.0" layoutY="473.0" mnemonicParsing="false" onAction="#onSave" text="Save" />
               <Button fx:id="cancel_button" layoutX="330.0" layoutY="473.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
